@using Microsoft.AspNetCore.Identity
@model IEnumerable<Week6Lab_Identity.Models.Word>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="basket">
    @await Component.InvokeAsync(nameof(Week6Lab_Identity.Components.BasketComponent))
</div>

<h2>View</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Definition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="repeated">
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Definition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <form method="post">
                        <button asp-controller="Store" asp-action="AddToCartAsync" asp-route-id=@item.Id>Add To cart</button>
                    </form>
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
