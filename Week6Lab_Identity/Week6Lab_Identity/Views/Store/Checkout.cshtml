@model Charge
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="basket">
    @await Component.InvokeAsync(nameof(Week6Lab_Identity.Components.BasketComponent))
</div>

<p>Note: the products "sold" here are not real products. As such, the form only allows demo data to be input, not real card information -- but the demo information will get processed by the payment service. Please use responsibly.</p>
<form method="post">
    <div>
        <label asp-for="CardHolderName">Name</label>
        <select asp-for="CardHolderName" >
            <option>John Smith</option>
            <option>Jane Doe</option>
            <option>Jessica Jameson</option>
        </select>
    </div>
    <div>
        <label asp-for="Number">Number</label>
        <select asp-for="Number" >
            <option>4111111111111111</option>
            <option>4012888818888</option>
            <option>2223000010309703</option>
        </select>
    </div>
    <div>
        <label asp-for="Experation">Experation</label>
        <select asp-for="Experation" >
            <option>0718</option>
            <option>0519</option>
            <option>0321</option>
        </select>
    </div>
    <div>
        <label asp-for="Cvv">Cvv</label>
        <input asp-for="Cvv" />
    </div>
    <div>
        <label asp-for="Amount">$ Amount</label>
        <input asp-for="Amount" value=@ViewData["Total"] />
    </div>
    <input type="submit" value="Submit">
</form>

